<h1><%= @wiki.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
    <small>
    <i>submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %></i> <br>
    </small>
  </div>

  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% if current_user.wikis.include?(@wiki) || current_user.admin? %>
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    <% end %>
  </div>
</div>
