<h1>Edit Wiki</h1>

<div class='row'>
  <div class='col-md-4'>
    <h4>Wiki rules</h4>
    <ul>
      <li>It can honestly be whatever you want.</li>
    </ul>
  </div>
  <div class='col-md-8'>
    <%= form_for @wiki do |f| %>
      <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Title' %>
      </div>
      <div class='form-group'>
        <%= f.label :body %>
        <%= f.text_area :body, rows: 12, class: 'form-control', placeholder: 'Enter Body' %>
      </div>
      <div class='form=group'>
        <%= f.submit 'Save', class: 'btn btn-success' %>
        <%= link_to 'Cancel', wiki_path , class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
